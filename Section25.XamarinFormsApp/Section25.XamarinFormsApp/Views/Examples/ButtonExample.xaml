<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Section25.XamarinFormsApp.Views.Examples.ButtonExample">
    <ContentPage.Content>
        <StackLayout>
            <Button 
                x:Name="UserButton" 
                Pressed="UserButton_OnPressed" 
                Released="UserButton_OnReleased" 
                Text="Tap Me"
                CornerRadius="10"
                BackgroundColor="Aqua"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>