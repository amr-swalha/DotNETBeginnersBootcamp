             x:Class="Section25.XamarinFormsApp.Views.HomePage"
             Title="Home Page" >
    <ContentPage.Content>
        <StackLayout Spacing="20" Orientation="Vertical">
            <Label Text="Welcome to Xamarin.Forms!"
